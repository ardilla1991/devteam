<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>Devteam</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<display-name>MainServlet</display-name>
		<servlet-name>MainServlet</servlet-name>
		<servlet-class>by.htp.devteam.controller.main.MainServlet</servlet-class>
		<!--multipart-config> <max-file-size>10</max-file-size> <max-request-size>20971520</max-request-size> 
			<file-size-threshold>5242880</file-size-threshold> </multipart-config -->
	</servlet>
	<servlet-mapping>
		<servlet-name>MainServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.css</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.js</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.jpg</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>/uploads/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>/bootstrap/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<display-name>index.jsp</display-name>
		<servlet-name>index.jsp</servlet-name>
		<jsp-file>/index.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>index.jsp</servlet-name>
		<url-pattern>/ru</url-pattern>
		<url-pattern>/en</url-pattern>
	</servlet-mapping>
	<filter>
		<display-name>LogFilter</display-name>
		<filter-name>LogFilter</filter-name>
		<filter-class>by.htp.devteam.filter.LogFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>LogFilter</filter-name>
		<servlet-name>MainServlet</servlet-name>
	</filter-mapping>
	<filter>
		<display-name>EncodingFilter</display-name>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>by.htp.devteam.filter.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<servlet-name>MainServlet</servlet-name>
	</filter-mapping>
	<filter>
		<description>Redirect main page to locale language page</description>
		<display-name>RedirectLocalizationFilter</display-name>
		<filter-name>RedirectLocalizationFilter</filter-name>
		<filter-class>by.htp.devteam.filter.RedirectLocalizationFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>RedirectLocalizationFilter</filter-name>
		<servlet-name>MainServlet</servlet-name>
	</filter-mapping>
	<filter>
		<description></description>
		<display-name>LocaleFilter</display-name>
		<filter-name>LocaleFilter</filter-name>
		<filter-class>by.htp.devteam.filter.LocaleFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>LocaleFilter</filter-name>
		<servlet-name>MainServlet</servlet-name>
		<url-pattern>/ru</url-pattern>
		<url-pattern>/en</url-pattern>
		<!-- dispatcher>FORWARD</dispatcher -->
	</filter-mapping>
	<filter>
		<description></description>
		<display-name>CSRFValidationFilter</display-name>
		<filter-name>CSRFValidationFilter</filter-name>
		<filter-class>by.htp.devteam.filter.CSRFValidationFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>CSRFValidationFilter</filter-name>
		<servlet-name>MainServlet</servlet-name>
	</filter-mapping>
	<filter>
		<description></description>
		<display-name>CSRFGenerateTokenFilter</display-name>
		<filter-name>CSRFGenerateTokenFilter</filter-name>
		<filter-class>by.htp.devteam.filter.CSRFGenerateTokenFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>CSRFGenerateTokenFilter</filter-name>
		<servlet-name>MainServlet</servlet-name>
	</filter-mapping>
	<filter>
		<description>Rewrite urls</description>
		<display-name>UrlRewriteFilter</display-name>
		<filter-name>UrlRewriteFilter</filter-name>
		<filter-class>by.htp.devteam.filter.UrlRewriteFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>UrlRewriteFilter</filter-name>
		<servlet-name>MainServlet</servlet-name>
	</filter-mapping>
	<filter>
		<display-name>ACLFilter</display-name>
		<filter-name>ACLFilter</filter-name>
		<filter-class>by.htp.devteam.filter.ACLFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ACLFilter</filter-name>
		<servlet-name>MainServlet</servlet-name>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>
	<error-page>
		<!-- Uncaught exception -->
		<error-code>500</error-code>
		<location>/WEB-INF/jsp/error/error500.jsp</location>
	</error-page>
	<error-page>
		<!-- Forbidden directory listing -->
		<error-code>403</error-code>
		<location>/WEB-INF/jsp/error/error403.jsp</location>
	</error-page>
	<error-page>
		<!-- Missing resource -->
		<error-code>404</error-code>
		<location>/WEB-INF/jsp/error/error404.jsp</location>
	</error-page>
	<error-page>
		<!-- Unsupported servlet method -->
		<error-code>503</error-code>
		<location>/WEB-INF/jsp/error/error503.jsp</location>
	</error-page>
	<jsp-config>
		<taglib>
			<taglib-uri>pagetag</taglib-uri>
			<taglib-location>/WEB-INF/tld/page.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>menutag</taglib-uri>
			<taglib-location>/WEB-INF/tld/menu.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>errormessagetag</taglib-uri>
			<taglib-location>/WEB-INF/tld/errorMessage.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>actiontag</taglib-uri>
			<taglib-location>/WEB-INF/tld/action.tld</taglib-location>
		</taglib>
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<page-encoding>UTF-8</page-encoding>
		</jsp-property-group>
	</jsp-config>
	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/devteam</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
</web-app>